apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: daemon-cron
  namespace: cron
spec:
  selector:
    matchLabels:
      name: daemon-cron
  template:
    metadata:
      labels:
        name: daemon-cron
    spec:
      containers:
      - name: daemon-cron
        image: us.gcr.io/astxd/cronpy
        env:
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: spec.nodeName
        - name: SENDGRID_API_KEY
          value: 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
        - name: CRON_EXP
          value: "@hourly"
        - name: COMMAND
          value: "python main.py"
